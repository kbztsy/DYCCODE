<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dtsp.dao.InternalDao">
       <!--    //查询所有Internal
    public List<List<Map>> getInternal();
    //插入
    public boolean insertInternal(Map map);-->
       <!-- 查询所有user -->
       <select id="getInternal" resultType="com.dtsp.ModelOld.InternalOld">
              select
                     MZZY_ID as mzzy_id,
	                 Patient_Name  as patient_name,
	                 Sex_ID  as sex_id,
	                 Date_of_Birth as  date_of_birth
             from
                     FBK_BKBZ_Record
              where
                     1=1 and BKLX_ID = '21'
                ORDER BY Date_of_TB DESC
       </select>
    <!--public boolean insertInternal(InternalNew internalNew);-->
    <insert id="insertInternal"
            parameterType="com.dtsp.ModelNew.InternalNew">
        insert into
        MEDICAL_INFORMATION_ENREGISTER
        (
        INF_ID,
        VISIT_NO,
        RESI_CASE_NO,
        <if test="BIRTHDAY!=null">
            BIRTHDAY,
        </if>
        SICK_NAME,
        SICK_SEX)
      values(
        #{ID},
        #{VISIT_NO},
        #{RESI_CASE_NO},
        <if test="BIRTHDAY!=null">
            #{BIRTHDAY},
        </if>
        #{SICK_NAME} ,
        #{SICK_SEX} )
    </insert>
       <!-- 添加数据并返回主键ID,接收主键,必须以实体类接收 -->

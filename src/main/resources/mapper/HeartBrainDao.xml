<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dtsp.dao.HeartBrainDao">
    <!-- 查询所有user -->
    <select id="GetHeartBrain" resultType="com.dtsp.ModelOld.HeartBrainOld">
             SELECT
               mzzy_id  as  mzzy_id,
               patient_name as patient_name,
               sex_id as sex_id,
               nationality_id as nationality_id,
               occupation_id as occupation_id,
               date_of_birth as date_of_birth,
               address as address,
               xyqk as xyqk,
               zd as xzd,
           --    disease_id as ,
               zddw as zddw,
               date_of_zd as date_of_zd,
               tbdw as tbdw ,
               date_of_tb as date_of_tb,
               person_of_tb as person_of_tb
             from
               FBK_BKBZ_Record
             WHERE 1=1 AND BKLX_ID = '03'
             order by
               Date_of_TB DESC;
       </select>
    <insert id="insertHeartBrain"
            parameterType="com.dtsp.ModelNew.HeartBrainNew">
       insert into  MEDICAL_INFORMATION_ENREGISTER
       (
        INF_ID
        ,VISIT_NO
        ,RESI_CASE_NO
        ,SICK_NAME
        ,SICK_SEX
        <if test="NATION!=null AND NATION!=''">
        ,NATION
        </if>
        ,OCCUPATION
        <if test="BIRTHDAY!=null AND BIRTHDAY=''">
        ,BIRTHDAY
        </if>
        ,ADDRESS
        ,RECEPTION_ORG
        ,RECEPTION_TIME
        ,CREATE_TIME
        ,WRITE_DOCTOR)
        values
        (
         #{INF_ID}
        ,#{VISIT_NO}
        ,#{RESI_CASE_NO}
        ,#{SICK_NAME}
        ,#{SICK_SEX}
        ,#{NATION}
        ,#{OCCUPATION}
        <if test="BIRTHDAY!=null">
        ,#{BIRTHDAY}
        </if>
        ,#{ADDRESS}
        <if test="RECEPTION_TIME!=null">
        ,#{RECEPTION_TIME}
        </if>
        <if test=" CREATE_TIME!=null">
        ,#{CREATE_TIME}
        </if>
        ,#{WRITE_DOCTOR}
       )
    </insert>

    <insert id="insertMEDICAL"
            parameterType="com.dtsp.ModelNew.HeartBrainNew">
 insert into
     FIRST_DIAGNOSE_REPORT_HEIGHT(
     ID
     ,DIAGNOSECODE
     ,DIAGNOSISBASIS
     ,DIAGNOSISBASISOTHER
     <if test="SMOKING!=null AND SMOKING!=''">
     ,SMOKING</if>)
    values (
      #{ID}
      ,#{DIAGNOSECODE}
      ,#{DIAGNOSISBASIS}
      ,#{DIAGNOSISBASISOTHER}
        <if test="SMOKING!=null AND SMOKING!=''">
      ,#{SMOKING}
        </if>)
    </insert>
</mapper>